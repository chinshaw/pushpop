<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:pp="urn:import:com.pushpop.client.view.desktop">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="subheader">
			<h1 id="h-top-questions"> Top Questions </h1>
			<div id="tabs">
				<g:Anchor ui:field="sortByInteresting"
					title="questions that may be of interest to you based on your history and tag preferences">interesting</g:Anchor>
				<g:Anchor ui:field="sortByHot"
					title="questions with the most views, answers, and votes over the last few days">hot</g:Anchor>
				<g:Anchor ui:field="sortByHotForWeek" 
					title="questions with the most views, answers, and votes this week">week</g:Anchor>
				<g:Anchor ui:field="sortByHotForMonth" 
					title="questions with the most views, answers, and votes this month">month</g:Anchor>
			</div>
		</div>
		<c:CellList ui:field="questionsMiniList"></c:CellList>

	</g:HTMLPanel>
</ui:UiBinder> 