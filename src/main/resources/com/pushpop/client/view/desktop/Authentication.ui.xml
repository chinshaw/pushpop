<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title {
			opacity: 0.4;
			z-index: 1;
			position: relative;
		}
		
		input {
			display: block;
		}
		
		.submitButton {
			height: 36px;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<div id="content">

			<div class="subheader">
				<h1>You must log in to ask a question</h1>
			</div>
			<div id="mainbar">

				<div class="page-description">

					<div class="form-error">
					</div>

	
					<p style="text-align:left;">Authenticate with your ldap authentication email and password</p>

					<input ui:field="username" type="text" class="actual-edit-overlay"
						style="background-color: white; color: black; opacity: 1; width: 300px; height: 28px; font-size: 22px;" />
					<input ui:field="password" class="actual-edit-overlay" type="password"
						style="background-color: white; color: black; opacity: 1; width: 300px; height: 28px; font-size: 22px;" />
						
					<g:Button ui:field="login" styleName="{style.submitButton}" >Log in</g:Button>
				</div>
			</div>
			<br class="cbt" />
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 